#!/usr/bin/env bash

set -euo pipefail

REPO="$(dirname "$(dirname "$(realpath "$0")")")"

source "$REPO/bin/env"

rm -rf "$REPO/dist"
rm -rf "$REPO/artifacts"
mkdir "$REPO/artifacts"
cp "$REPO/version" "$REPO/src/icebreaker"
python -m build --wheel --outdir "$REPO/artifacts"
rm "$REPO/src/icebreaker/version"
