#!/usr/bin/env bash

set -euo pipefail

PROJECT="$(dirname "$(dirname "$(realpath "${0}")")")"

"${PROJECT}/bin/clean"
brew install python@3.12
python3.12 -m venv --copies --clear "${PROJECT}/.env"
source "${PROJECT}/bin/env"
python -m pip install uv
python -m uv pip install --editable "${PROJECT}[dev,cli,testing]"
