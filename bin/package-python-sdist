#!/usr/bin/env bash

set -euo pipefail

PROJECT="$(dirname "$(dirname "$(realpath "${0}")")")"

source "${PROJECT}/bin/env"

rm -rf "${PROJECT}/dist"
rm -rf "${PROJECT}/artifacts"
mkdir "${PROJECT}/artifacts"
cp "${PROJECT}/version" "${PROJECT}/src/icebreaker"
python -m build --sdist --outdir "${PROJECT}/artifacts"
rm "${PROJECT}/src/icebreaker/version"
